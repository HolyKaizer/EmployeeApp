<Window x:Class="Homework_1.DelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_1"
        mc:Ignorable="d"
        Title="DelWindow" Height="200" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Удалить элемент?" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Background="Transparent" Click="Button_Click">
                <Image Source="img\check32.png" ToolTip="Удалить"/>
            </Button>
            <Button Background="Transparent" Click="Button_Click_1">
                <Image Source="img\close32.png" ToolTip="Отмена"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
